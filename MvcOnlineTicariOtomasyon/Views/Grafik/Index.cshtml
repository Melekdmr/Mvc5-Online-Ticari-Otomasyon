
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

@{ 
    var grafik = new Chart(width: 500, height: 500);
    grafik.AddTitle(text: "Kategoriler ve Ürün Sayıları");
    grafik.AddLegend(title: "Değerler");
    grafik.AddSeries(
        name: "Veriler",
        chartType: "Pie",
        xValue: new[] { "Beyaz Eşya", "Bilgisayar", "Küçük Ev Aleti", "Telefon ve Aksesuar", "Mobilya" },
        yValues: new[] { 500, 230, 370, 250, 620 }
);
    grafik.Write();



}