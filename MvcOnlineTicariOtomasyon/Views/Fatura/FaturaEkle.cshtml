@model MvcOnlineTicariOtomasyon.Models.Siniflar.Faturalar
@{
    ViewBag.Title = "FaturaEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Fatura Girişi</h2>
<br />
<form class="form-group" method="post">

    <label for="FaturaSeriNo">Fatura Seri No</label>
    @Html.TextBoxFor(x => x.FaturaSeriNo, new { @class = "form-control" })
    <br />
    <label for="FaturaSıraNo">Fatura Sıra No</label>
    @Html.TextBoxFor(x => x.FaturaSıraNo, new { @class = "form-control" })
    <br />
    <label for="Tarih">Tarih</label>
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    <label for="Saat">Saat</label>
    @Html.TextBoxFor(x => x.Saat, new { @class = "form-control" })
    <br />
    <label for="VergiDairesi">Vergi Dairesi</label>
    @Html.TextBoxFor(x => x.VargiDairesi, new { @class = "form-control" })
    <br />
    <label for="TeslimEden">Teslim Eden</label>
    @Html.TextBoxFor(x => x.TeslimEden, new { @class = "form-control" })
    <br />
    <label for="TeslimAlan">Teslim Alan</label>
    @Html.TextBoxFor(x => x.TeslimAlan, new { @class = "form-control" })
    <br />
   

    <button class="btn btn-warning">Kaydet</button>



</form>

