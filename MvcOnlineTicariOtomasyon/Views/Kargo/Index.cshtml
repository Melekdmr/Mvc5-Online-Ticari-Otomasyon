@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
       Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}



<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>PERSONEL</th>
        <th>ALICI</th>
        <th>TARİH</th>
        <th>TAKİP KODU</th>
        <th>DETAYLAR</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Personel</td>
            <td>@x.Alici</td>
            <td>@x.Tarih</td>
            <td>@x.TakipKodu</td>
            <td>
                <a href="/Kargo/KargoTakip/@x.TakipKodu" class="btn btn-default" style="background-color: #2F4F4F; color: white; ">Detay</a>
            </td>
        </tr>
    }
</table>

<a href="/Kargo/YeniKargo" class="btn btn-primary">Yeni Kargo Girişi</a>


