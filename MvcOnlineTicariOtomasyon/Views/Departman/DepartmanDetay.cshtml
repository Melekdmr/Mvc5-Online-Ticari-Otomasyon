@using MvcOnlineTicariOtomasyon.Models.Siniflar

@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>

<table class="table table-hover">
    <tr>
     
        <th>Personel</th>

       
        <th>Satışlar</th>

    </tr>
    @if (Model != null && Model.Any())
    {
        foreach (var x in Model)
        {
            <tr>
            
                <td>@x.PersonelAd  @x.PersonelSoyad</td>
            
               
                <td>
                    <a href="/Departman/DepartmanPersonelSatis/@x.PersonelId" class="btn btn-default" style="background-color:#ff6a00 ; color: white;">
                        <i class="fas fa-shopping-cart"></i> Satışlar
                    </a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5">Gösterilecek kayıt bulunamadı.</td>
        </tr>
    }

</table>